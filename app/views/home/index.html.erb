<h1>Gestione risorse e materiale inventariabile<br/><small><%= current_organization %></small></h1>

<div class="list-group">
<% @good_requests.each do |gr| %>  
  <%= render gr %>  
<% end %>
</div>
<div style="text-align: center">
  <div class="my-3">
    <%= link_to new_good_request_path do %>
      <button class="btn btn-lg btn-info py-3" style="width: 75%; font-size: 200%">
        <%= icon('plus', size: 60) %> <br/> NUOVA <br/>RICHIESTA DI ACQUISTO
      </button>
    <% end %>
  </div>
  <div class="my-3">
    <%= link_to goods_path do %>
      <button class="btn btn-lg btn-info py-3" style="width: 75%; font-size: 200%">
        <%= icon('search', size: 60) %> <br/> PROPRIA <br/>SITUAZIONE INVENTARIALE
      </button> 
    <% end %>
  </div>
  <div class="my-3">
    <%= link_to servers_path do %>
      <button class="btn btn-lg btn-info py-3" style="width: 75%; font-size: 200%">
        <%= icon('server', size: 60) %> <br/> UTILIZZO REMOTO <br/>RISORSE DI CALCOLO
      </button> 
    <% end %>
  </div>
</div>



