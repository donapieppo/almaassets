<h1>Gestione risorse e materiale inventariabile<br/><small><%= current_organization.name %></small></h1>

<% @good_requests.each do |gr| %>  
  <%= render gr %>  
<% end %>

<% if @good_requests_as_holder.any? %>  
  <h2>Richieste sui suoi fondi</h2>
  <% @good_requests_as_holder.each do |gr| %>
    <%= render gr %>
  <% end %>
<% end %>

<div style="text-align: center">
  <div class="my-3">
    <%= link_to new_good_request_path do %>
      <button class="btn btn-lg btn-info py-3" style="width: 75%; font-size: 200%">
        <%= dm_icon('plus', size: "2xl") %> <br/> NUOVA <br/>RICHIESTA DI ACQUISTO
      </button>
    <% end %>
  </div>

  <div class="my-3">
    <%= link_to goods_path do %>
      <button class="btn btn-lg btn-info py-3" style="width: 75%; font-size: 200%">
        <%= dm_icon('search', size: "2xl") %> <br/> PROPRIA <br/>SITUAZIONE INVENTARIALE
      </button> 
    <% end %>
  </div>
</div>



