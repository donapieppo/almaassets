<%= dm_menu do %>  
  <%= dm_header %>
  <%= dm_nav do  %>  
    <li><%= link_to big_icon('home', text: 'Home'), root_path %></li>
    <% if current_user.is_admin? %>  
      <%= dropdown_menu :amm, big_icon('bookmark') + ' Categorie' do  %>
        <% Category.find_each do |cat| %>  
          <%= link_to (fwicon('angle-right') + " #{cat}"), goods_path(category_id: cat.id) %>
        <% end %>
        <div class="dropdown-divider"></div>
        <%= link_to (fwicon('question-circle') + " sconosciuto"), goods_path(no_category: 1) %>
        <%= link_to (fwicon('plus') + " nuova categoria"), new_category_path %>
      <% end %>
      <%= dropdown_menu :amm, big_icon('map-marker') + ' Ubicazioni' do  %>
        <% Location.find_each do |location| %>  
          <%= link_to (fwicon('angle-right') + " #{location}"), goods_path(location_id: location.id) %>
        <% end %>
        <div class="dropdown-divider"></div>
        <%= link_to (fwicon('plus') + " nuova ubicazioone"), new_location_path %>
      <% end %>
      <%= dropdown_menu :amm, big_icon('user') + ' Utenti' do  %>
        <% User.order(:surname, :name).each do |user| %>
          <%= link_to (fwicon('wallet') + " #{user.cn_militar}"), goods_path(user_id: user.id) %>
        <% end %>
      <% end %>
      <li><%= link_to big_icon('trash', text: 'Scarichi'), goods_path(unload: true) %></li>
      <%= form_tag find_goods_path, class: "form-inline my-2 my-lg-0 ml-3", role: "search", method: :get do %>
        <input name="search_string" size="6" class="form-control mr-sm-2" type="search" placeholder="cerca" aria-label="Cerca"/>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= javascript_tag do %>  
  document.querySelector('[aria-label="Cerca"]').focus();
<% end %>
