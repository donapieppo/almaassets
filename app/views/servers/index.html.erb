<h1>Elenco risorse disponibili<br/><small><%= current_organization %></small></h1>

<% @servers.each do |s| %>  
  <%= dm_card title: "#{s.name.upcase} (#{ s.url })" do %>  
    <div class="row">
      <div class="col-md-6">
        <pre><%= s.hardware %></pre>
      </div>
      <div class="col-md-6">
        <pre><%= s.software %></pre>
      </div>
    </div>

    <p class="centered">
    <%= link_to "PRENOTA", server_bookings_path(s), class: "btn btn-primary btn-lg p-3" %> 

    <% if user_admin? %>  
      - <%= link_to 'modifica', edit_server_path(s) %>  
    <% end %>
    </p>
  <% end %>
<% end %>

<% if current_user.is_admin? %>  
  <%= link_to 'Nuovo', new_server_path %>  
<% end %>
