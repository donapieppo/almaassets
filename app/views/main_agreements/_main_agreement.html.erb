<% title = "#{category_icon main_agreement.category} #{h main_agreement.name}".html_safe %>  
<div class="card my-3">  
  <div class="card-header font-weight-bold">
    <%= title %>  
  </div>
  <div class="card-body">
    <div class="font-weight-bold mb-3">
      <%= main_agreement.vendor_and_model.upcase %> 
      <span class="float-right badge badge-pill badge-info" style="font-size: 110%">
        <%= main_agreement.price %> &euro; + iva
      </span>
    </div>
    <% unless main_agreement.description.blank? %>  
      <div class="alert alert-info">
        <%= main_agreement_description(main_agreement.description) %>  
      </div>
    <% end %>
    <% unless main_agreement.notes.blank? %>  
      <strong>note:</strong> <%= main_agreement.notes %><br/>
    <% end %>
  </div>
  <% if defined?(with_button) and with_button == true %>  
    <div class="card-footer">
      <%= link_to icon('plus', text: 'Scelgo questa convenzione'), new_category_good_request_path(main_agreement.category, main_agreement_id: main_agreement.id), class: 'btn btn-success' %>
      <% if user_admin? %>  
        <%= link_to icon('edit', text: 'Modifica'), edit_main_agreement_path(main_agreement), class: 'btn btn-primary' %>  
        <%= link_to icon('trash', text: 'Elimina la Convenzione'), main_agreement_path(main_agreement), method: :delete, title: 'elimina', data: {confirm: 'Siete sicuri di voler cancellare?'}, class: 'btn btn-danger' %>
      <% end %>
    </div>
  <% end %>
</div>

