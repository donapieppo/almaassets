<%= dm_card title: "#{category_icon main_agreement.category} #{h main_agreement.name}".html_safe do %>  
  <div class="font-weight-bold mb-3">
    <%= main_agreement.vendor_and_model.upcase %> 
    <span class="float-right badge badge-pill badge-info" style="font-size: 110%"><%= main_agreement.price %>  &euro;</span>
  </div>
  <div class="alert alert-info">
    <%= main_agreement_description(main_agreement.description) %>  
  </div>
  <strong>note:</strong> <%= main_agreement.notes %><br/>
  <strong>convenzione:</strong> <%= main_agreement.title %>  
<% end %>
