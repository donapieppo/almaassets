<div class="card my-3">  
  <div class="card-header font-weight-bold">
    <%= category_icon main_agreement.category %> <%= main_agreement.name %>  
    <% if policy(main_agreement).edit? %>  
      <span class="float-end"><%= link_to_edit [:edit, main_agreement] %></span>
    <% end %>
  </div>
  <div class="card-body">
    <div class="font-weight-bold mb-3">
      <%= main_agreement.vendor_and_model.upcase %> 
      <span class="float-end badge bg-pill bg-warning" style="font-size: 110%">
        <%= main_agreement.price %> &euro; + iva
      </span>
    </div>
    <% unless main_agreement.description.blank? %>  
        <%= main_agreement_description(main_agreement.description) %>  
    <% end %>
    <% unless main_agreement.notes.blank? %>  
      <strong>note:</strong> <%= main_agreement.notes %><br/>
    <% end %>
    <% main_agreement.documents.each do |doc| %>  
      <p class="my-1"><strong>Allegato:</strong>  <%= link_to doc.name, doc.attach %></p>
    <% end %>
  </div>
  <% if defined?(with_button) and with_button == true %>  
    <div class="card-footer">
      <%= link_to dmicon('plus', text: 'Scelgo questa convenzione'), new_category_good_request_path(main_agreement.category, main_agreement_id: main_agreement.id), class: 'btn btn-success' %>
      <% if policy(main_agreement).edit? %>  
        <%= link_to dmicon('file', text: 'Allega documento'), new_main_agreement_document_path(main_agreement), class: 'btn btn-primary' %>  
        <%= link_to dmicon('edit', text: 'Modifica'), edit_main_agreement_path(main_agreement), class: 'btn btn-primary' %>  
        <%= link_to dmicon('trash', text: 'Elimina la Convenzione'), main_agreement_path(main_agreement), method: :delete, title: 'elimina', data: {confirm: 'Siete sicuri di voler cancellare?'}, class: 'btn btn-danger' %>
      <% end %>
    </div>
  <% end %>
</div>

