<div class="card my-1" id="<%= "good_#{good.id}" %>">
  <div class="card-header <%= 'bg-warning' if good.to_unload  %>">
    <div class="row">
      <div class="col-5">
        <%= category_icon(good.category, size: 25) %>
      </div>

      <div class="col-2 centered">
        <span class="btn btn-sm font-weight-bold <%= good.user_id ? "btn-info" : "btn-danger" %>">inv. <%= good.inv_number %></span>
      </div>

      <div class="col-5">
        <span class="float-right">
          <%= link_to(good.user, goods_path(user_id: good.user.id)) if good.user_id %> &nbsp;
          <%= original_info(good) %>  
        </span>
      </div>
    </div>
  </div>

  <div class="card-body">
    <%= good.name.blank? ? good.description.upcase : good.name.upcase %> (<%= good.build_year %>)
    <span class="float-right">
      <% if good.old_inv_number %>
        <span class="badge badge-secondary p-1"><%= good.old_inv_number %> - <%= good.old_org %></span>
      <% end %>
      <%= link_to_edit(edit_good_path(good), modal: true) if current_user.is_admin? %>  
      <%= link_to(icon('trash-alt', prefix: 'far'), unload_good_path(good), remote: true) if current_user.is_admin? %>  
    </span>
  </div>
</div>
