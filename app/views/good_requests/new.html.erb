<% if @main_agreement or @outside_agreements or @available_agreements.empty? %>  
  <%= render 'form' %>  
<% else %>
  Sono disponibili le seguenti convenzioni attive da cui scegliere:  
  <% @available_agreements.each do |ma| %>  
    <div>
      <%= render ma %>  
      <%= link_to icon('plus', text: 'scelgo questa convenzione'), new_category_good_request_path(@category, main_agreement_id: ma.id), class: 'btn btn-success' %>  
    </div>
  <% end %>

  Altrimenti
  <%= link_to icon('plus', text: 'Fuori dalle convenzioni'), new_category_good_request_path(@category, outside_agreements: 1), class: 'btn btn-success' %>  
<% end %>
